<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinancialApp.Views.TransactionEdit"
             Title="TransactionEdit">
    <VerticalStackLayout Spacing="10">
        <Border BackgroundColor="Black" Margin="15" Stroke="Transparent" Padding="15" StrokeShape="RoundRectangle 30">
            <Grid RowDefinitions="Auto" ColumnDefinitions="*,30">
                <Label Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" Text="Update" TextColor="White"/>
                <Label Grid.Row="0" Grid.Column="1" HorizontalOptions="Center" Text="X" TextColor="White"/>
            </Grid>
        </Border>
        <Grid ColumnDefinitions="*,*" Margin="30,0">
            <RadioButton IsChecked="True" Content="Income"></RadioButton>
            <RadioButton HorizontalOptions="End" Grid.Column="1" Content="Expense"></RadioButton>
        </Grid>

        <Entry Placeholder="Name" Margin="15,0"/>

        <DatePicker Margin="15,0"/>

        <Entry Placeholder="Amount" Margin="15,0"/>

        <Button Text="Save" Margin="15,0" HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>